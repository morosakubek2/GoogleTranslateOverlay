<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.apps.translate">

    <!-- Uprawnienia do widoczności pakietów -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <!-- Deklaracja <queries> dla Android 11+ -->
    <queries>
        <package android:name="dev.davidv.translator" />
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:label="@string/app_name" <!-- Używa string z res/values/strings.xml -->
        android:icon="@drawable/ic_launcher" <!-- Używa ikony z res/drawable -->
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity
            android:name=".TranslateActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <!-- Przechwytuje PROCESS_TEXT -->
            <intent-filter android:priority="9999">
                <action android:name="android.intent.action.PROCESS_TEXT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <!-- Przechwytuje SEND -->
            <intent-filter android:priority="9999">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <!-- Przechwytuje jawne wywołania TranslateActivity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
