<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Uprawnienie do usługi dostępności -->
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />

    <application>

        <!-- Główna usługa dostępności -->
        <service
            android:name=".assistant.TextAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true"
            android:label="Text Translator Assistant">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <!-- KLUCZOWE: referencja do konfiguracji -->
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_config" />
        </service>

        <!-- Opcjonalnie: activity do ręcznego uruchomienia -->
        <!-- <activity android:name=".assistant.ManualTriggerActivity" ... /> -->

    </application>
</manifest>
